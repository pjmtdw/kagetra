source 'https://rubygems.org/'

gem 'unicorn' # http server

gem 'sinatra' # web framework
gem 'sinatra-contrib'
gem 'haml' # meta html

gem 'redcarpet' # markdown to (x)html converter
gem 'spreadsheet' # make Microsoft Excel files

gem 'nokogiri' # HTML parser

# you have to `apt install libmagickwand-dev` to install rmagick
# for CentOS, do `yum install ImageMagick-devel`
gem 'rmagick' # ImageMagick interface

gem 'rubyzip' # zip/unzip archive

gem 'sequel'
# you have to `apt install libpq-dev` to install pg gem
# for CentOS, do `yum install postgresql-devel`
gem 'pg' # PostgreSQL interface

# only used for developing
gem 'rspec' # BDD Testing
gem 'tux' # CLI for sinatra
