!!! 5
%html
  %head
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %title #{CONF_APP_NAME} - #{yield_content(:title)}
    %link(rel="shortcut icon" href="/img/favicon.ico")
    %link(rel="stylesheet" href="/css/base1.css")
    %link(rel="stylesheet" href="/css/base2.css")
    - this_css = yield_content(:css)
    - this_css.strip.split(/\s*,\s/).each do |x|
      %link(rel="stylesheet" href="/css/#{x}.css")
  %body
    %a(name="anchor-top")
    = yield
    .row
      %a.right(href="#anchor-top") &uArr; 一番上へ
    %script(src="js/libs/require.js" data-main="js/main" data-start="#{yield_content(:js_start)}")
