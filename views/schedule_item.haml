%script#templ-schedule-item(type='text/template')
  .info-item
    %span.day
      <%= day %>
    %span.info
      <%= ! _.isEmpty(info) ? info.names.join(" / ") : "" %>
    .event
      <% _.each(event,function(o){ %>
      .title.ellipsis
        <%= o.name %>
      <% }) %>
    .item
      <% _.each(item,function(o){ %>
      .title.ellipsis
        <%= o.title %>
      <% }) %>
%script#templ-schedule-item-edit-info(type='text/template')
  .info-item-edit
    %span.day
      <%= day %>
    %input.holiday(type='checkbox')
    %span 休日
    %textarea.info
      <%= info ? info.names.join("\n") : "" %>
%script#templ-schedule-detail(type='text/template')
  <% if(data.is_holiday){ %>
  .is-holiday.label.round.left 祝日
  <% } %>
  .year-month-day.left
    %span.year <%= data.year %>
    年
    %span.mon <%= data.mon %>
    月
    %span.day <%= data.day %>
    日 (
    %span.wday <%= data.wday %>
    )
  <% if(data.day_infos){ %>
  .day-infos.left
    <%= data.day_infos.join(", ") %>
  <% } %>
  .right
    %button#add-new-item.small.round
      予定追加
  #container-new-item
  .body

%script#templ-schedule-detail-event(type='text/template')
  %hr
  .schedule-detail-event.clearfix
    .left <%= data.name %> @ <%= data.place %>
    .right
      %span.detail.button.small
        詳細
      %span.comment.button.small
        コメント
        %span.comment-count (<%= data.comment_count %>)

%script#templ-schedule-detail-item(type='text/template')
  %hr
  .detail-item.clearfix
    .info.left
      <%= start_at %> &sim; <%= end_at %> <%= title %> @ <%= place %>
      <% if(description){ %>
      .description.panel.left
        <%= description %>
      <% } %>
    .right
      %button.edit.small.round
        編集

%script#templ-schedule-detail-item-edit(type='text/template')
  %hr
  .detail-item-edit
    %form.item-detail-form.left
      .row
        .large-12.columns
          .row
            .large-6.columns
              .row.collapse
                %label タイトル
                .large-9.columns
                  %input(type='text' name='title' value='{{ title }}')
                .large-3.columns
                  %input(type='checkbox') 強調

            .large-6.columns
              .row
                .large-6.columns
                  %select
                    %option 練習
                    %option コンパ
                    %option その他 
                .large-6.columns
                  %input(type='checkbox') 非公開
      .row
        .large-12.columns
          .row
            %label 場所
            .large-9.columns
              %input(type='text' name='place' value='{{ place }}')
            .large-3.columns
              %input(type='checkbox') 強調
      .row
        .large-6.small-6.columns
          .row
            %label 開始時刻
            .large-9.columns
              %input(type='text' name='start_at' value='{{ start_at }}' placeholder='hh:mm' )
            .large-3.columns
              %input(type='checkbox') 強調
        .large-6.small-6.columns
          .row
            %label 終了時刻
            .large-9.columns
              %input(type='text' name='end_at' value='{{ end_at }}' placeholder='hh:mm' )
            .large-3.columns
              %input(type='checkbox') 強調
      .row
        .large-12.small-12.columns
          %label 説明
          %textarea(cols='100' rows='8' name='description') {{ description }}
    .right
      %button.edit-done.small.round
        編集完了
      %button.edit-cancel.small.round
        キャンセル

#container-schedule-detail.reveal-modal
